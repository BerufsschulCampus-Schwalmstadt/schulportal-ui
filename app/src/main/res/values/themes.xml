<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SPH" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="backgroundColor">@color/white</item>
        <item name="android:windowBackground">?attr/backgroundColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="bottomSheetDialogTheme">@style/Theme.SPH.Sheet</item>
        <item name="actionBarStyle">@style/Theme.SPH.ActionBar</item>
    </style>

    <style name="Theme.SPH.Sheet" parent="Theme.MaterialComponents.DayNight.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="bottomSheetStyle">@style/Theme.SPH.ModalStyle</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/textColor</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="Theme.SPH.ModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_dialog</item>
    </style>

    <style name="Theme.SPH.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.SPH.ActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="background">?attr/backgroundColor</item>
    </style>

    <style name="Theme.SPHPlaner.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.SPHPlaner.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>